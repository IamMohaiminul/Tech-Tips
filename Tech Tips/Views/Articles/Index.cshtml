@model IEnumerable<Tech_Tips.Models.Article>

@{
    ViewBag.Title = "Index | Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Article</h2>

<div>
    @Html.ActionLink("Create Article", "Create", "Articles", null, new { @class = "btn btn-default" })
</div>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Edit", new { id = item.Id })
            </td>
            <td>
                @item.Category.Name
            </td>
        </tr>
    }

</table>
