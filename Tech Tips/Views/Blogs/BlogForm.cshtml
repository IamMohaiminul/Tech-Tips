@model Tech_Tips.ViewModels.BlogFormViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Blog Details</h2>

@using (Html.BeginForm("Save", "Blogs"))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Blog.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Blog.Title, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Blog.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Blog.Description, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Blog.CategoryId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Blog.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select a Category", new { @class = "form-control" })
            </div>
        </div>
        
        @Html.HiddenFor(model => model.Blog.Id)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save Blog</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Blog List", "Index", "Blogs")
</div>
